<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/ic_white_background</item>
        <item name="editTextBackground">@android:color/white</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:logo">@mipmap/ic_logo</item>




        <item name="android:windowContentTransitions">true</item>




        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->


        <!-- specify shared element transitions -->

    </style>


    <style name="AlertDialog.AppCompat.newStyle">
        <item name="android:background">@color/colorBackground</item>

    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->

        <!-- specify shared element transitions -->

    </style>




    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat">
        <item name="android:logo">@mipmap/ic_logo</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- specify enter and exit transitions -->

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
